<style lang="scss">
  @import "../styles/_variables.scss";
  @import "../styles/_breakpoints.scss";

  .footer {
    &__nav {
      display: flex;
      justify-content: space-between;
      margin-bottom: 160px;

      @include media("<=tablet") {
        row-gap: 70px;
        margin-bottom: 60px;
      }

      @include media("<=tablet") {
        flex-direction: column;
      }

      .footer__tagline-qr {
        h3 {
          text-transform: uppercase;
          font-size: 1.5rem;
          margin-bottom: 50px;
        }

        .footer__store-links {
          display: none;
          gap: 20px;

          @include media("<=tablet") {
            display: flex;
          }

          li > a {
            background-color: $bgSecondary;
            padding: 10px 15px;
            border-radius: 50px;
            display: flex;
            align-items: center;

            img {
              width: 75px;
            }
          }
        }
      }

      &--mid {
        display: flex;
        gap: 75px;

        @include media("<=tablet") {
          flex-wrap: wrap;
        }
      }

      .footer__contact {
        text-align: right;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        row-gap: 20px;

        @include media("<=tablet") {
          text-align: left;
          align-items: flex-start;
        }

        .footer__socials {
          display: flex;

          a > img {
            width: 32px;
          }
        }
      }
    }

    .footer__info {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;

      @include media("<=tablet") {
        flex-direction: column-reverse;
        row-gap: 50px;
        align-items: flex-start;
      }

      .footer__rights > .footer__logo {
        width: 67px;
        margin-bottom: 15px;

        @include media("<=tablet") {
          width: 57px;
        }
      }

      .footer__location {
        text-align: right;

        @include media("<=tablet") {
          text-align: left;
        }

        .footer__country {
          margin-bottom: 10px;
        }
      }
    }
  }
</style>
