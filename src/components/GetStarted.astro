        }
      }

      .get-started__desc {
        margin-bottom: 40px;
      }

      .get-started__store-links {
        display: flex;
        gap: 20px;

        li > a {
          background-color: $bgTertiary;
          padding: 15px 20px;
          border-radius: 50px;
          display: flex;
          align-items: center;

          @include media("<=tablet") {
            padding: 10px 15px;
          }

          img {
            width: 100px;

            @include media("<=tablet") {
              width: 75px;
            }
          }
        }
      }
    }

    &__img {
      max-width: 450px;
    }
  }
