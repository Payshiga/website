<nav class="nav">
  <div class="nav__logo">
    <img src="/website/img/logo.svg" alt="Shiga logo" />
  </div>

  <ul class="nav__list">
    <li class="nav__item">
      <a href="https://business.payshiga.com/">Shiga Business</a>
    </li>
    <li class="nav__item"><a href="https://cards.payshiga.com/">Ojah</a></li>
    <li class="nav__item"><a href="https://ojah.shop/">Utility Cards</a></li>
  </ul>

  <a href="#get-started" class="nav__download-btn">Download App</a>

  <img
    src="/website/img/burger-icon.svg"
    alt="burger icon"
    class="nav__burger"
    id="burger-icon"
  />

  <section class="nav__overlay" id="overlay">...</section>
</nav>

<script>
  const burgerImg = document.getElementById("burger-icon");
  const overlay = document.getElementById("overlay");

  burgerImg.addEventListener("click", () => {
    const currentSrc = burgerImg.getAttribute("src");

    if (currentSrc.includes("burger-icon.svg")) {
      burgerImg.setAttribute("src", "/website/img/close-icon.svg");
    } else {
      burgerImg.setAttribute("src", "/website/img/burger-icon.svg");
    }

    overlay.classList.toggle("overlay-show");
  });
</script>


<style lang="scss">
  @import "../styles/_variables.scss";
  @import "../styles/_breakpoints.scss";

  .nav {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    padding-bottom: 2rem;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;

    // @include media("<=tablet") {
    //   padding: 2rem;
    // }

    // @include media(">=desktop") {
    //   padding: 2rem 4rem;
    // }

    &__logo {
      img {
        width: 67px;
        position: relative;
        z-index: 2;

        @include media("<=tablet") {
          width: 57px;
        }
      }
    }

    &__burger {
      display: none;
      width: 16px;
      position: relative;
      z-index: 2;
      cursor: pointer;

      @include media("<=tablet") {
        display: block;
      }
    }

    &__list {
      display: flex;
      gap: 50px;

      @include media("<=tablet") {
        display: none;
      }
    }

    &__download-btn {
      padding: 8px 16px;
      background-color: $bgSecondary;
      border-radius: 20px;
      color: $bgPrimary;

      @include media("<=tablet") {
        display: none;
      }
    }

    &__overlay {
      width: 100%;
      height: 100vh;
      background-color: $bgPrimary;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      position: fixed;
      top: 0;
      left: 100%;
      padding: 75px 2rem 50px;
      z-index: 1;
      transition: 0.3s ease-in-out;

      ul > li:not(:last-child) {
        margin-bottom: 25px;
      }

      p {
        text-align: center;
        color: #6f6f70;
        font-size: 0.75rem;
      }
    }

    .overlay-show {
      left: 0;
    }
  }
</style>
